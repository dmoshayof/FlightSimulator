<Window x:Class="FlightSimulator.Views.AutoPilotWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightSimulator.Views"
        mc:Ignorable="d"
       Height="450" Width="800">
    <Grid>
        <DockPanel>
            <Grid DockPanel.Dock="Top">
                <TextBox Height="300" Width="350" Margin="226,34,217.333,-34">
                    <TextBox.Style>
                        <Style TargetType="{x:Type TextBox}">
                            <Setter Property="Background" Value="Pink" />
                            <Style.Triggers>
                                <Trigger Property="Text" Value=""/>
                            </Style.Triggers>

                        </Style>
                    </TextBox.Style>
                </TextBox>
            </Grid>
            <Grid DockPanel.Dock="Bottom" Height="33" Margin="214,0,520.333,0">
                <Button x:Name="ok" Content="OK" HorizontalAlignment="Center" Height="100"  Width="150"/>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
